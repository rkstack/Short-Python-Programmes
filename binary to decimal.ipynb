   "source": [
    "# Binary to decimal"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "### Given a binary number as an integer N, convert it into decimal and print."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 7,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "1101\n",
      "13\n"
     ]
    }
   ],
   "source": [
    "n=int(input())\n",
    "quot=n\n",
    "i=0\n",
    "dec=0\n",
    "\n",
    "while quot>0:\n",
    "    idec=0\n",
    "    rem=(quot%10)\n",
    "    quot=(quot//10)\n",
    "    idec=rem*(2**i)\n",
    "    dec=dec+idec\n",
    "    i+=1\n",
    "    \n",
    "print(dec)\n",
    "    \n",
    "    "
   ]
  }
 ],
